extends ../layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title 登录
                    .panel-body
                        form(role='form' method='post' action='/user/sign_in')
                            fieldset
                                .form-group
                                    input.form-control#username(placeholder='邮箱',name='email',autofocus=true,value='')
                                .form-group
                                    input.form-control#password(placeholder='密码',name='password',type='password',value='')
                                div
                                    .checkbox
                                        label
                                            input(name='remember',type='checkbox',value='Remember Me')
                                            span 记住我
                                    a(href='/user/register') 注册
                                button.btn.btn-lg.btn-success.btn-block#login(type='button') 登录
    .alert.alert-success#successedAlert(hidden=true)
        a.close(href='#', data-dismiss='alert')
            | ×
        strong 提示！
        | 登录成功！
    script(src='/javascripts/login.js')

