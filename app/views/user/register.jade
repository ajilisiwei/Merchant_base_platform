extends ../layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title 用户注册
                    .panel-body
                        form
                            fieldset
                                .form-group
                                    input#userEmail.form-control(placeholder='邮箱' name='email' type='email' autofocus=true)
                                .form-group
                                    input#userName.form-control(placeholder='用户名' name='username' type='type')
                                .form-group
                                    input#password.form-control(placeholder='密码' type='password')
                                .form-group
                                    input#passwordConfirm.form-control(placeholder='密码确认' type='password')
                                div
                                    button.btn.btn-lg.btn-success.btn-block#register(type='button') 提交
                                    button.btn.btn-lg.btn-warm.btn-block#reset(type='button') 重置
    #successAlert.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', style='display: none;')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4.modal-title 提示
                .modal-body
                    | 注册成功！
                .modal-footer
                    button.btn.btn-success#goLogin(type='button')  去登录
    script(src='/javascripts/register.js')
