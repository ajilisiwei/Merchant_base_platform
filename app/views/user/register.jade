extends ../layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Please Sign Up
                    .panel-body
                        form
                            fieldset
                                .form-group
                                    label(for='userEmail') E-mail
                                    input#userEmail.form-control(placeholder='E-mail' name='email' type='email' autofocus=true)
                                .form-group
                                    label(for='userName') UserName
                                    input#userName.form-control(placeholder='UserName' name='username' type='type')
                                .form-group
                                    label(for='password') Password
                                    input#password.form-control(placeholder='Password' type='password')
                                .form-group
                                    label(for='passwordconfirm') Confirm Password
                                    input#passwordconfirm.form-control(placeholder='Confirm Password' type='passwordconfirm')
                                div
                                    button.btn.btn-lg.btn-success.btn-block#register(type='submit') Register
                                    button.btn.btn-lg.btn-warm.btn-block#reset Reset
    script(src='../scripts/register.js')
