extends ../layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Please Sign In
                    .panel-body
                        form(role='form')
                            fieldset
                                .form-group
                                    input.form-control(placeholder='E-mail',name='email',type='email',autofocus=true)
                                .form-group
                                    input.form-control(placeholder='Password',name='password',type='password',value='')
                                .checkbox
                                    label
                                        input(name='remember',type='checkbox',value='Remember Me')
                                        span Remember Me
                                a.btn.btn-lg.btn-success.btn-block Login

